datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Project {
  id          Int      @id @default(autoincrement())
  githubId    BigInt   @unique // GitHub 的唯一 ID
  name        String
  description String?
  htmlUrl     String
  language    String?
  topics      String[] // 存储标签
  stars       Int      @default(0)
  studentName String? // 简易处理：直接存学生名字
  createdAt   DateTime @default(now())
}
